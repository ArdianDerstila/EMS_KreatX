@model EmployeeEditViewModel

@{ ViewData["Title"] = "Edit Employee";
                var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? null); }



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Edit Employee</div>
                </div>
                
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-head">
                        <header>Basic Information</header>
                      
                     
                    </div>
                    <div class="card-body row">
                        <form enctype="multipart/form-data" asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input hidden asp-for="ID" />
                            <input hidden asp-for="ExistingPhotoPath" />
                            <div class="form-body">
                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        First Name
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        @*<label asp-for="Name" class="control-label"></label>*@
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="control-label col-md-3">
                                        Email
                                        <span class="required"> * </span>
                                    </label>

                                    <div class="col-md-5">
                                        <div class="input-group">
                                            @*<label asp-for="Email" class="control-label"></label>*@
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>






                                <div class="form-group row">

                                    <label asp-for="Photo" class="control-label col-md-3">
                                        Profile Picture
                                    </label>
                                    <div class="col-md-5">
                                        <input asp-for="Photo" class="form-control custom-file-input" />
                                    </div>
                                </div>

                                @*<div class="form-group row">

                                    <label asp-for="Photo" class="control-label col-md-3">
                                        Picture
                                    </label>
                                    <div class="col-md-5">
                                        <img src="@photoPath" class="imageThumbnail" asp-append-version="true" />
                                    </div>
                                </div>*@
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="offset-md-3 col-md-9">
                                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-circle btn-primary">Submit</button>
                                            <button type="reset" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-circle btn-danger">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content -->